<script>
    // Go to the previous item
    $("#prevBtn").click(function () {
        $("#myCarouselCustom").carousel("prev");
    });
    // Go to the previous item
    $("#nextBtn").click(function () {
        $("#myCarouselCustom").carousel("next");
    });
    $('.carousel').carousel({
        interval: 19000,
        pause: true,
        wrap: true
    });
    ComprobarMedidasPantalla();
    $(window).resize(function () {
        ComprobarMedidasPantalla();
    });
    function ComprobarMedidasPantalla() {
        // Get the size of the entire webpage
        const pageWidth = document.documentElement.scrollWidth;
        if (pageWidth > 750) {
            document.getElementById("ULdeMenu").className = "nav";
            document.getElementById("SoloMovil1").className = "nove";
            document.getElementById("SoloMovil2").className = "nove";
            document.getElementById("SoloMovil3").className = "nove";
            document.getElementById("botonesidioma").className = "ve";
            var x = document.getElementsByClassName("nav dropdown-toggle");
            var i = 0;
            for (i = 0; i < x.length; i++) {
                x[i].removeAttribute("data-toggle");
                x[i].removeAttribute("aria-haspopup");
                x[i].removeAttribute("aria-expanded");
            }
            var y = document.getElementsByClassName("dropdown-menu p-4");
            i = 0;
            for (i = 0; i < y.length; i++) {
                y[i].style.backgroundColor = 'lightgrey';
            }
        }
        else {
            document.getElementById("ULdeMenu").className = "navbar-nav mr-auto";
            document.getElementById("SoloMovil1").className = "ve";
            document.getElementById("SoloMovil2").className = "ve";
            document.getElementById("SoloMovil3").className = "ve";
            document.getElementById("botonesidioma").className = "navbar-collapse collapse";
            x = document.getElementsByClassName("nav dropdown-toggle");
            i = 0;
            for (i = 0; i < x.length; i++) {
                x[i].setAttribute("data-toggle", "dropdown");
                x[i].setAttribute("aria-haspopup", "true");
                x[i].setAttribute("aria-expanded", "false");
            }
            y = document.getElementsByClassName("dropdown-menu p-4");
            i = 0;
            for (i = 0; i < y.length; i++) {
                y[i].style.backgroundColor = 'transparent';
            }
        }

    }
</script>